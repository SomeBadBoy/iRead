<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
<shape>
    <gradient 
       android:startColor="#6e6e6e"
       android:endColor="#FFFFFF"
       android:angle="270"
       android:gradientRadius="50"/>
    <stroke android:width="2dp"
        android:color="#1196ee"/>
    <corners
        android:topRightRadius="8dp"
        android:bottomLeftRadius="8dp"
        android:topLeftRadius="8dp"
        android:bottomRightRadius="8dp"/>
    <padding
	    android:left="8dp"
	    android:top="8dp"
	    android:right="8dp"
	    android:bottom="8dp"/>
</shape>
</item>
<item android:state_focused="true">
    <shape>
        <gradient 
		    android:startColor="#dddddd"
		    android:endColor="#FFFFFF"
            android:angle="270"
            android:gradientRadius="50"/>
        <stroke android:width="2dp"
            android:color="#adadad"/>
        <corner
            android:radius="8dp"/>
        <padding
            android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp"/>
       </shape>
</item>
<item>
     <shape>
	     <gradient 
	       android:startColor="#ffffff"
	       android:endColor="#ababab"
	       android:angle="270"
	       android:gradientRadius="50"/>
         <stroke
             android:width="2dp"
             android:color="#D3D3D3"/>
         <corners
             android:topRightRadius="8dp"
             android:bottomLeftRadius="8dp"
             android:topLeftRadius="8dp"
             android:bottomRightRadius="8dp"/>
         <padding
             android:left="8dp"
             android:top="8dp"
             android:right="8dp"
             android:bottom="8dp"/>
         </shape>
</item>
</selector>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0ae5a0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ScanAdd" >

    <LinearLayout
        android:id="@+id/notell1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notetv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读时间"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/noteviewtv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/notetv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读页码"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/noteviewtv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/notetv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/noteviewtv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="(无标题)"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/notetv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笔记"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/noteviewtv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <Button
        android:id="@+id/noteviewbtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/notell1"
        android:layout_alignParentBottom="true"
        android:text="分享" />

</RelativeLayout>
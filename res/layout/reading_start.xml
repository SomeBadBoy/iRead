<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartReading" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="265sp"
        android:layout_height="188sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/all_readtime" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="none" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="39dp"
        android:text="@string/page_start"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Chronometer
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/startreading"
        android:layout_alignTop="@+id/endreading"
        android:text="00:00"
        android:textSize="33sp" />

    <Button
        android:id="@+id/endreading"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_alignLeft="@+id/start_page"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_selector"
        android:text="@string/end_reading" />s

    <Button
        android:id="@+id/startreading"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_above="@+id/clock"
        android:layout_alignRight="@+id/tv1"
        android:background="@drawable/button_selector"
        android:text="@string/read_start" />

    <EditText
        android:id="@+id/start_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv1"
        android:layout_alignBottom="@+id/tv1"
        android:layout_alignRight="@+id/imageView1"
        android:background="@color/ailan"
        android:ems="4"
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    tools:context=".MainActivity" >



    <Button
        android:id="@+id/interest_button"
        android:layout_width="140sp"
        android:layout_height="40sp"
        android:layout_alignRight="@+id/listView1"
        android:layout_alignTop="@+id/scan_add_button"
        android:text="@string/interest"
         android:background="@drawable/button_selector" />

    <Button
        android:id="@+id/progress_button"
        android:layout_width="140sp"
        android:layout_height="40sp"
        android:layout_alignLeft="@+id/scan_add_button"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_selector"
        android:text="@string/progress" />

    <Button
        android:id="@+id/classify_button"
        android:layout_width="140sp"
        android:layout_height="40sp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/progress_button"
        android:background="@drawable/button_selector"
        android:text="@string/classify"
        android:topRightRadius="50dp" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="400sp"
        android:layout_height="40sp"
        android:layout_above="@+id/interest_button"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/classify_button" >

    </ListView>

    <Button
        android:id="@+id/scan_add_button"
        android:layout_width="140sp"
        android:layout_height="40sp"
        android:layout_above="@+id/progress_button"
        android:layout_alignLeft="@+id/listView1"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_selector"
        android:text="@string/scan_add" />

</RelativeLayout>